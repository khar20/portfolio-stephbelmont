---
import ThreeScene from "./ThreeScene.svelte";
---

<section class="hero-section">
    <div class="top-bar container">
        <div class="artist-brand">SB / 2026</div>
        <div class="skills">
            <span class="pill">3D MODELLING</span>
            <span class="pill">SHADING</span>
            <span class="pill">LIGHTING</span>
        </div>
    </div>

    <div class="center-stage container">
        <div class="graphics-wrapper">
            <!-- astroid -->
            <div class="astroid-shape"></div>
            <!-- name -->
            <h1 class="artist-name">
                <span class="line">STEPHANI</span>
                <span class="line">BELMONTE</span>
            </h1>
        </div>
    </div>

    <div class="bottom-ui container">
        <div class="role-badge">3D ARTIST</div>
        <div class="actions">
            <button id="about-trigger" class="btn secondary">ABOUT ME</button>
            <a href="#contact" class="btn primary">CONTACT</a>
        </div>
    </div>

    <div id="about-overlay" class="about-overlay">
        <div class="about-content">
            <button id="about-close" class="close-btn">âœ•</button>
            <h2>ABOUT STEPH</h2>
            <p>
                Digital sculptor and visual artist. Exploring the boundaries
                between geometry and emotion. Based in Peru, working globally.
            </p>
            <div class="overlay-socials">
                <span>INSTA / polaris.s.b</span>
                <span>BEHANCE / sbelmonte</span>
            </div>
        </div>
    </div>

    <div class="scene-wrapper">
        <ThreeScene client:load />
    </div>
</section>

<script>
    import { gsap } from "gsap";

    // overlay
    const trigger = document.getElementById("about-trigger");
    const close = document.getElementById("about-close");
    const overlay = document.getElementById("about-overlay");

    trigger?.addEventListener("click", () => {
        gsap.to(overlay, { display: "flex", opacity: 1, duration: 0.5 });
    });

    close?.addEventListener("click", () => {
        gsap.to(overlay, {
            opacity: 0,
            duration: 0.3,
            onComplete: () => {
                overlay.style.display = "none";
            },
        });
    });

    // intro animation
    window.addEventListener("load", () => {
        const tl = gsap.timeline();

        tl.from(".astroid-shape", {
            scale: 0,
            duration: 1.5,
            ease: "elastic.out(1, 0.5)",
        })
            .from(
                ".line",
                {
                    y: 100,
                    opacity: 0,
                    duration: 1,
                    stagger: 0.2,
                    ease: "power3.out",
                },
                "-=1",
            )
            .from(".top-bar, .bottom-ui", { opacity: 0, duration: 1 }, "-=0.5");
    });
</script>

<style>
    .hero-section {
        position: relative;
        height: 100vh;
        height: 100dvh;
        width: 100%;
        background-color: #050505;
        overflow: hidden;
        color: white;
        font-family: "Inter", sans-serif;
    }

    .container {
        padding: 0 2rem;
        max-width: 1600px;
        margin: 0 auto;
        width: 100%;
    }

    .scene-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }

    .top-bar {
        position: absolute;
        top: 2rem;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 10;
    }

    .artist-brand {
        font-size: 1rem;
        letter-spacing: 1px;
        font-weight: 300;
    }

    .skills {
        display: flex;
        gap: 1rem;
    }

    .pill {
        border: 1px solid white;
        padding: 0.5rem 1.2rem;
        border-radius: 50px;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
    }

    .bottom-ui {
        position: absolute;
        bottom: 2rem;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 10;
    }

    .role-badge {
        border: 1px solid white;
        padding: 0.6rem 2rem;
        border-radius: 50px;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        text-transform: uppercase;
        transition: transform 0.2s;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .btn.secondary {
        background: transparent;
        border: 1px solid white;
        color: white;
    }

    .btn.primary {
        background: white;
        border: 1px solid white;
        color: black;
    }

    .center-stage {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        z-index: 5;
        pointer-events: none;
    }

    .graphics-wrapper {
        position: relative;
        display: grid;
        place-items: center;
        margin-left: 5vw;
    }

    .astroid-shape {
        position: absolute;
        width: 600px;
        height: 600px;
        background-color: white;
        clip-path: path(
            "M300,0 C300,165 165,300 0,300 C165,300 300,435 300,600 C300,435 435,300 600,300 C435,300 300,165 300,0"
        );
        z-index: 1;
    }

    .artist-name {
        position: relative;
        z-index: 2;
        font-family: "Playfair Display", serif;
        font-size: clamp(4rem, 8vw, 10rem);
        line-height: 0.85;
        color: white;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        mix-blend-mode: difference;
    }

    .line {
        display: block;
        letter-spacing: -0.03em;
    }

    .about-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        z-index: 100;
        display: none;
        align-items: center;
        justify-content: center;
        color: white;
        opacity: 0;
    }

    .about-content {
        max-width: 500px;
        position: relative;
        pointer-events: all;
    }

    .close-btn {
        position: absolute;
        top: -40px;
        right: 0;
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
    }

    @media (max-width: 1024px) {
        .graphics-wrapper {
            margin-left: 0;
        }
        .center-stage {
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .top-bar {
            flex-direction: column;
            gap: 1rem;
        }
        .bottom-ui {
            flex-direction: column;
            gap: 1rem;
            padding-bottom: 3rem;
        }
        .skills {
            display: none;
        }
        .astroid-shape {
            width: 350px;
            height: 350px;
            clip-path: path(
                "M175,0 C175,96 96,175 0,175 C96,175 175,254 175,350 C175,254 254,175 350,175 C254,175 175,96 175,0"
            );
        }
        .actions {
            width: 100%;
            justify-content: space-between;
        }
        .btn {
            padding: 0.8rem 1.5rem;
            width: 48%;
            text-align: center;
        }
    }
</style>

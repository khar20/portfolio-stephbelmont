---
import ThreeScene from "./ThreeScene.svelte";
---

<section class="hero-section">
    <div class="top-bar container">
        <div class="artist-brand fade-in">SB / 2026</div>
        <div class="skills fade-in">
            <span class="pill">3D MODELLING</span>
            <span class="pill">SHADING</span>
            <span class="pill">LIGHTING</span>
        </div>
    </div>

    <div class="main-content container">
        <div class="name-container fade-in-up">
            <div class="astroid-icon">
                <svg
                    viewBox="0 0 100 100"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M50 0C50 27.6142 27.6142 50 0 50C27.6142 50 50 72.3858 50 100C50 72.3858 72.3858 50 100 50C72.3858 50 50 27.6142 50 0Z"
                        fill="currentColor"></path>
                </svg>
            </div>
            <h1 class="artist-name">
                STEPHANI<br />
                BELMONTE
            </h1>
        </div>
    </div>

    <div class="bottom-ui container">
        <div class="role-badge fade-in-up">3D ARTIST</div>
        <div class="actions fade-in-up">
            <button id="about-trigger" class="btn secondary">ABOUT ME</button>
            <a href="#contact" class="btn primary">CONTACT</a>
        </div>
    </div>

    <div id="about-overlay" class="about-overlay">
        <div class="about-content">
            <button id="about-close" class="close-btn">âœ•</button>
            <div class="overlay-icon">
                <svg
                    viewBox="0 0 100 100"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M50 0C50 27.6142 27.6142 50 0 50C27.6142 50 50 72.3858 50 100C50 72.3858 72.3858 50 100 50C72.3858 50 50 27.6142 50 0Z"
                        fill="currentColor"></path>
                </svg>
            </div>
            <h2>ABOUT STEPH</h2>
            <p>
                Minimalist 3D Artist based in the digital ether. Specializing in
                clean geometries, monochrome shading, and architectural
                lighting. Focused on the intersection of brutalist form and
                digital fluidity.
            </p>
            <div class="overlay-socials">
                <span>INSTA / polaris.s.b</span>
                <span>BEHANCE / sbelmonte</span>
            </div>
        </div>
    </div>

    <div class="model-wrapper fade-in-slow">
        <ThreeScene client:load />
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    window.addEventListener("load", () => {
        const tl = gsap.timeline();

        tl.to(".fade-in", {
            opacity: 1,
            y: 0,
            duration: 1,
            stagger: 0.1,
            ease: "power3.out",
        })
            .to(
                ".fade-in-up",
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    stagger: 0.1,
                    ease: "power3.out",
                },
                "-=0.6",
            )
            .to(".fade-in-slow", { opacity: 1, duration: 2 }, "-=1");

        // parallax on scroll
        gsap.to(".artist-name", {
            scrollTrigger: {
                trigger: ".hero-section",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
            y: -50,
            opacity: 0,
        });

        gsap.to(".model-wrapper", {
            scrollTrigger: {
                trigger: ".hero-section",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
            y: 100,
            scale: 0.9,
        });

        const trigger = document.getElementById(
            "about-trigger",
        ) as HTMLButtonElement | null;
        const close = document.getElementById(
            "about-close",
        ) as HTMLButtonElement | null;
        const overlay = document.getElementById(
            "about-overlay",
        ) as HTMLDivElement | null;

        if (trigger && overlay) {
            trigger.addEventListener("click", () => {
                gsap.to(overlay, {
                    display: "flex",
                    opacity: 1,
                    duration: 0.5,
                    ease: "power2.out",
                });
            });
        }

        if (close && overlay) {
            close.addEventListener("click", () => {
                gsap.to(overlay, {
                    opacity: 0,
                    duration: 0.3,
                    onComplete: () => {
                        overlay.style.display = "none";
                    },
                });
            });
        }
    });
</script>

<style>
    .hero-section {
        position: relative;
        height: 100vh;
        height: 100dvh;
        width: 100%;
        overflow: hidden;
        background: var(--bg-color);
    }

    .container {
        padding: 0 2rem;
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
    }

    .top-bar {
        position: absolute;
        top: 2rem;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 20;
    }

    .artist-brand {
        font-weight: 700;
        opacity: 0;
        transform: translateY(-10px);
        letter-spacing: 1px;
    }
    .skills {
        display: flex;
        gap: 0.5rem;
        opacity: 0;
        transform: translateY(-10px);
    }

    .pill {
        border: 1px solid var(--accent-color);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.65rem;
        letter-spacing: 1px;
        color: var(--accent-color);
    }

    .main-content {
        height: 100%;
        display: flex;
        align-items: center;
        position: relative;
        z-index: 10;
    }

    .name-container {
        position: relative;
        opacity: 0;
        transform: translateY(30px);
        z-index: 15;
        max-width: 60%;
    }

    .astroid-icon {
        width: 60px;
        height: 60px;
        margin-bottom: 1rem;
        color: var(--text-color);
    }

    .artist-name {
        font-family: "Italiana", serif;
        font-size: clamp(4rem, 11vw, 10rem);
        line-height: 0.9;
        font-weight: 400;
        margin: 0;
        letter-spacing: -0.02em;
        text-transform: uppercase;
        color: var(--text-color);
    }

    .model-wrapper {
        position: absolute;
        inset: 0;
        z-index: 5;
        opacity: 0;
        pointer-events: none;
    }

    .bottom-ui {
        position: absolute;
        bottom: 2rem;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        z-index: 20;
    }

    .role-badge {
        font-family: var(--font-main);
        font-size: clamp(1rem, 2vw, 1.5rem);
        font-weight: 300;
        border: 1px solid var(--text-color);
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        opacity: 0;
        transform: translateY(20px);
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    .actions {
        display: flex;
        gap: 1rem;
        opacity: 0;
        transform: translateY(20px);
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid var(--text-color);
        background: transparent;
        color: var(--text-color);
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .btn.primary {
        background: var(--text-color);
        color: var(--bg-color);
    }
    .btn:hover {
        opacity: 0.7;
    }

    .about-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(10, 10, 10, 0.98);
        z-index: 100;
        display: none;
        opacity: 0;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .about-content {
        max-width: 500px;
        position: relative;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .overlay-icon {
        width: 40px;
        margin-bottom: 2rem;
        color: var(--text-color);
    }

    .about-content h2 {
        font-family: var(--font-main);
        font-size: 2rem;
        margin-bottom: 1.5rem;
        font-weight: 700;
        letter-spacing: 2px;
    }

    .about-content p {
        font-size: 1rem;
        line-height: 1.8;
        opacity: 0.7;
        margin-bottom: 3rem;
        font-family: var(--font-main);
    }

    .close-btn {
        position: absolute;
        top: -4rem;
        right: 0;
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .overlay-socials {
        display: flex;
        gap: 2rem;
        font-size: 0.7rem;
        opacity: 0.5;
        letter-spacing: 1px;
    }

    @media (max-width: 900px) {
        .name-container {
            max-width: 100%;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .bottom-ui {
            flex-direction: column;
            align-items: center;
            gap: 2rem;
            bottom: 3rem;
        }
        .role-badge {
            order: 2;
        }
        .actions {
            order: 1;
        }

        .skills {
            display: none;
        }
        .top-bar {
            justify-content: center;
        }
    }
</style>

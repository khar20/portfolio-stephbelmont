---
import ThreeScene from "./ThreeScene.svelte";
---

<section class="hero-section">
    <div class="top-bar container">
        <div class="artist-brand fade-in">SB / 2026</div>
        <div class="skills fade-in">
            <span class="pill">3D MODELLING</span>
            <span class="pill">SHADING</span>
            <span class="pill">LIGHTING</span>
        </div>
    </div>

    <div class="name-container fade-in-up">
        <h1 class="artist-name">STEPH<br />BELMONTE</h1>
    </div>

    <div class="bottom-ui container">
        <div class="role-badge fade-in-up">3D ARTIST</div>
        <div class="actions fade-in-up">
            <button id="about-trigger" class="btn secondary">ABOUT ME</button>
            <a href="#contact" class="btn primary">CONTACT</a>
        </div>
    </div>

    <div id="about-overlay" class="about-overlay">
        <div class="about-content">
            <button id="about-close" class="close-btn">âœ•</button>
            <h2>ABOUT STEPH</h2>
            <p>
                Minimalist 3D Artist based in the digital ether. Specializing in
                clean geometries, monochrome shading, and architectural
                lighting. Focused on the intersection of brutalist form and
                digital fluidity.
            </p>
            <div class="overlay-socials">
                <span>INSTA / polaris.s.b</span>
                <span>BEHANCE / sbelmonte</span>
            </div>
        </div>
    </div>

    <div class="model-wrapper fade-in-slow">
        <ThreeScene client:load />
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    window.addEventListener("load", () => {
        const tl = gsap.timeline();

        tl.to(".fade-in", {
            opacity: 1,
            y: 0,
            duration: 1,
            stagger: 0.1,
            ease: "power3.out",
        })
            .to(
                ".fade-in-up",
                {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    stagger: 0.1,
                    ease: "power3.out",
                },
                "-=0.6",
            )
            .to(".fade-in-slow", { opacity: 1, duration: 2 }, "-=1");

        // parallax effect
        gsap.to(".artist-name", {
            scrollTrigger: {
                trigger: ".hero-section",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
            y: -150,
            opacity: 0,
            scale: 0.9,
        });

        // overlay logic
        const trigger = document.getElementById("about-trigger");
        const close = document.getElementById("about-close");
        const overlay = document.getElementById("about-overlay");

        trigger?.addEventListener("click", () => {
            gsap.to(overlay, {
                display: "flex",
                opacity: 1,
                duration: 0.5,
                ease: "power2.out",
            });
        });

        close?.addEventListener("click", () => {
            if (!overlay) {
                return;
            }
            gsap.to(overlay, {
                opacity: 0,
                duration: 0.3,
                onComplete: () => {
                    overlay.style.display = "none";
                },
            });
        });
    });
</script>

<style>
    .hero-section {
        position: relative;
        height: 100vh;
        height: 100dvh;
        width: 100%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-color);
    }

    .container {
        padding: 0 1.5rem;
        width: 100%;
        max-width: 1400px;
    }

    .top-bar {
        position: absolute;
        top: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 20;
    }

    .artist-brand {
        font-weight: 700;
        opacity: 0;
        transform: translateY(-10px);
    }

    .skills {
        display: flex;
        gap: 0.5rem;
        opacity: 0;
        transform: translateY(-10px);
    }

    .pill {
        border: 1px solid var(--accent-color);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.65rem;
        letter-spacing: 1px;
    }

    .name-container {
        position: relative;
        z-index: 10;
        text-align: center;
        opacity: 0;
        transform: translateY(30px);
        pointer-events: none;
    }

    .artist-name {
        font-size: clamp(4rem, 15vw, 12rem);
        line-height: 0.85;
        font-weight: 900;
        margin: 0;
        letter-spacing: -0.05em;
        mix-blend-mode: difference;
        text-transform: uppercase;
    }

    .bottom-ui {
        position: absolute;
        bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        z-index: 20;
    }

    .role-badge {
        font-size: clamp(1rem, 4vw, 2.5rem);
        font-weight: 800;
        border: 1.5px solid var(--text-color);
        padding: 0.4rem 1.2rem;
        border-radius: 12px;
        opacity: 0;
        transform: translateY(20px);
    }

    .actions {
        display: flex;
        gap: 0.75rem;
        opacity: 0;
        transform: translateY(20px);
    }

    .btn {
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid var(--text-color);
        background: transparent;
        color: var(--text-color);
    }

    .btn.primary {
        background: var(--text-color);
        color: var(--bg-color);
    }
    .btn:hover {
        opacity: 0.7;
    }

    .about-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.95);
        z-index: 100;
        display: none;
        opacity: 0;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .about-content {
        max-width: 600px;
        position: relative;
        text-align: left;
    }

    .about-content h2 {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }
    .about-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        opacity: 0.8;
        margin-bottom: 2rem;
    }

    .close-btn {
        position: absolute;
        top: -3rem;
        right: 0;
        background: none;
        border: none;
        color: white;
        font-size: 2rem;
        cursor: pointer;
    }

    .overlay-socials {
        display: flex;
        gap: 2rem;
        font-size: 0.8rem;
        opacity: 0.5;
    }

    .model-wrapper {
        position: absolute;
        inset: 0;
        z-index: 5;
        opacity: 0;
    }

    @media (max-width: 768px) {
        .skills {
            display: none;
        }
        .bottom-ui {
            flex-direction: column;
            align-items: center;
            gap: 2rem;
            text-align: center;
            bottom: 3rem;
        }
        .role-badge {
            order: 2;
        }
        .actions {
            order: 1;
            width: 100%;
            justify-content: center;
        }
        .top-bar {
            justify-content: center;
        }
    }
</style>

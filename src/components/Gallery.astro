<section class="gallery-section container">
    <div class="gallery-grid">
        <div class="item large">
            <img
                src="https://placehold.co/1200x800/111/fff?text=Museum+Render"
                alt="Interior"
            />
        </div>
        <div class="item tall">
            <img
                src="https://placehold.co/400x800/111/fff?text=Character+Wireframe"
                alt="Wireframe"
            />
        </div>
        <div class="item wide">
            <img
                src="https://placehold.co/800x400/111/fff?text=Environment+Layout"
                alt="Environment"
            />
        </div>
        <div class="item medium">
            <img
                src="https://placehold.co/600x600/111/fff?text=Prop+Detail"
                alt="Prop"
            />
        </div>
        <div class="item medium">
            <img
                src="https://placehold.co/600x600/111/fff?text=Lighting+Setup"
                alt="Lighting"
            />
        </div>
    </div>
    <div class="captions">
        <p>Palazzo Ducanle and Biblioteca Marciana</p>
        <p class="align-right">Guggenheim Museum</p>
    </div>
</section>

<style>
    .gallery-section {
        padding-bottom: 5rem;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: 300px;
        gap: 1.5rem;
    }

    .item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .large {
        grid-column: span 2;
        grid-row: span 2;
    }

    .tall {
        grid-column: span 1;
        grid-row: span 2;
    }

    .wide {
        grid-column: span 3;
        grid-row: span 1;
    }

    .medium {
        grid-column: span 1;
        grid-row: span 1;
    }

    .captions {
        margin-top: 1rem;
        display: flex;
        justify-content: space-between;
        font-size: 1.2rem;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .gallery-grid {
            display: flex;
            flex-direction: column;
        }
        .item {
            height: 300px;
        }
    }
</style>

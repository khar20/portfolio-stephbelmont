---
const projects = [
    {
        title: "SILENCE",
        type: "Personal",
        img: "https://placehold.co/600x800/111/fff?text=Render+01",
    },
    {
        title: "VOID",
        type: "Commercial",
        img: "https://placehold.co/600x800/000/ccc?text=Render+02",
    },
    {
        title: "MONOLITH",
        type: "Study",
        img: "https://placehold.co/600x800/222/ddd?text=Render+03",
    },
];
---

<section class="work-section container">
    <div class="header">
        <h2 class="section-title">PROJECTS</h2>
    </div>

    <div class="work-grid">
        {
            projects.map((p) => (
                <div class="work-item">
                    <div class="img-container">
                        <img src={p.img} alt={p.title} />
                    </div>
                    <div class="item-meta">
                        <h3>{p.title}</h3>
                        <span>{p.type}</span>
                    </div>
                </div>
            ))
        }
    </div>
</section>

<style>
    .work-section {
        padding: 10rem 1.5rem;
        background: var(--bg-color);
    }

    .section-title {
        font-size: clamp(3rem, 10vw, 8rem);
        font-weight: 900;
        margin-bottom: 4rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .work-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 3rem;
    }

    .work-item {
        cursor: pointer;
    }

    .img-container {
        aspect-ratio: 4/5;
        overflow: hidden;
        border-radius: 4px;
        background: #111;
        margin-bottom: 1.5rem;
    }

    .work-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .work-item:hover img {
        transform: scale(1.05);
    }

    .item-meta {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
    }
    .item-meta h3 {
        font-size: 1.2rem;
        font-weight: 500;
    }
    .item-meta span {
        font-size: 0.7rem;
        opacity: 0.5;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    @media (max-width: 768px) {
        .work-section {
            padding: 5rem 1.5rem;
        }
    }
</style>
